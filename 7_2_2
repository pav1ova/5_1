import requests
from bs4 import BeautifulSoup
import pandas as pd
import matplotlib.pyplot as plt
import matplotlib as mpl
import plotly
import plotly.graph_objs as go
import plotly.express as px
from plotly.subplots import make_subplots
from matplotlib.ticker import MaxNLocator

url = 'https://mfd.ru/currency/?currency=USD'
r = requests.get(url)
#print(r.text)
soup = BeautifulSoup(r.text, 'lxml')

table= soup.find(class_='mfd-content-container').find('table')
headers=[]
for i in table.find_all('tr'):
    data=i.text
    headers.append(data)


mydata = pd.DataFrame(columns = headers)
for j in table.find_all('tr')[1:]:
    row_data = j.find_all('td')
    row = [i.text for i in row_data]
    length = len(mydata)

    x_list = (row[1])
    y_list = row[0]



    key = y_list.replace('—Å ', '')
    value = x_list
    list1 = [key, value]
    print (list1)


fig, ax = plt.subplots()

ax.xaxis.set_major_locator(MaxNLocator(4))
ax.grid(True)
x =str(key)
y= float(value)
ax.set_title('rate', fontsize=15)
ax.set_xlabel('key', fontsize=12, color='blue')
ax.set_ylabel('value', fontsize=12, color='blue')
plt.plot(list1)

plt.show()

